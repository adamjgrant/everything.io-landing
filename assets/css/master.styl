@import '_sticky-footer'
@import '_variables'
@import '_mixins'

body
   background-color: $blue

.break
   background-color: #222222
img
   max-width: 100%
   &.spacious
      margin: 20px inherit
.block
   h2
      font-size: 20px
   padding-bottom: 40px
   &#heading
      padding: 20px
      padding-bottom: 0px
      img
         max-width: 100%
         cursor: pointer
      *
         text-align: center
      h1 
         font-size: 40px
         &.logo
            font-family: "rooney-web", sans-serif
         &.subtitle
            margin-bottom: 20px
            color: darken($blue, 40%)
            font-size: 25px
      a
         color: darken($yellow, 50%)
         text-decoration: underline 
      a.btn
         color: white
         text-decoration: none
         font-size: 16px
#footer
   background-color: $lightBrown

// TYPOGRAPHY

a
   color: $blue
*, p, em, label, h1, h2, h3, h4, h5, strong, b, i, table, div, ul, li
   font-family: "proxima-nova", sans-serif
   color: white;
.branded
   font-family: "rooney-web", sans-serif !important

// BUTTONS

.btn-primary
   // background-gradient($red)
   background-color: $red
   border-color: $red
   &:hover
      border-color: $red
